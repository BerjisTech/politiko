<h1>Political Followers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Politician</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @political_followers.each do |political_follower| %>
      <tr>
        <td><%= political_follower.user %></td>
        <td><%= political_follower.politician %></td>
        <td><%= link_to 'Show', political_follower %></td>
        <td><%= link_to 'Edit', edit_political_follower_path(political_follower) %></td>
        <td><%= link_to 'Destroy', political_follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

