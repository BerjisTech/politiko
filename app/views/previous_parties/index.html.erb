<p id="notice"><%= notice %></p>

<h1>Previous Parties</h1>

<table>
  <thead>
    <tr>
      <th>Party</th>
      <th>Politician</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @previous_parties.each do |previous_party| %>
      <tr>
        <td><%= previous_party.party %></td>
        <td><%= previous_party.politician %></td>
        <td><%= previous_party.start_date %></td>
        <td><%= previous_party.end_date %></td>
        <td><%= link_to 'Show', previous_party %></td>
        <td><%= link_to 'Edit', edit_previous_party_path(previous_party) %></td>
        <td><%= link_to 'Destroy', previous_party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

